{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "lib": [
      "es6"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*"
, "src/load-test.js"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}